{
  "name": "ariadne (Manifest V2)",
  "short_name": "__MSG_appName__",
  "description": "__MSG_appDescription__",
  "homepage_url": "https://ariadne.dantis.me",
  "version": "0.0.1",
  "manifest_version": 2,
  "default_locale": "en",
  "permissions": [
    "tabs",
    "management"
  ],
  "optional_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "128": "assets/img/Button@8x.png"
  },
  "background": {
    "page": "background/background.html",
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "16": "assets/img/Button.png",
      "24": "assets/img/Button@1.5x.png",
      "32": "assets/img/Button@2x.png"
    },
    "default_title": "Open Ariadne control panel",
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "js": ["./content.global.js"],
      "matches": ["*://*/*"],
      "run_at": "document_idle"
    }
  ]
}
