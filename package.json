{
    "name": "ariadne",
    "description": "Detect deceptive design on the Web",
    "version": "0.0.1",
    "homepage": "https://ariadne.dantis.me",
    "author": "ENTER YOUR NAME HERE",
    "repository": {
        "type": "git",
        "url": "ENTER GIT REPO URL"
    },
    "scripts": {
        "start": "xt-build -e dev -w",
        "start:firefox": "xt-build -e dev -p firefox -w",
        "build": "xt-build -e prod",
        "build:firefox": "xt-build -e prod -p firefox",
        "clean": "xt-clean",
        "docs": "xt-docs",
        "test": "xt-test",
        "coverage": "nyc --reporter=lcov npm run test",
        "sync": "xt-sync"
    },
    "babel": {
        "presets": [
            "@babel/preset-env"
        ]
    },
    "eslintIgnore": [
        "test/**/*"
    ],
    "devDependencies": {
        "extension-cli": "latest"
    },
    "xtdocs": {
        "source": {
            "include": [
                "README.md",
                "src"
            ]
        }
    },
    "xtbuild": {
        "js_bundles": [
            {
                "name": "background",
                "src": "./src/background/*.js"
            },
            {
                "name": "content",
                "src": "./src/content/*.js"
            }
        ],
        "scss_bundles": [
            {
                "name": "popup",
                "src": "./src/popup/*.scss"
            }
        ],
        "commands": "npm install --prefix ./src/popup && npm run build --prefix ./src/popup"
    },
    "dependencies": {
        "html2canvas": "^1.4.1"
    }
}
