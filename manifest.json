{
    "manifest_version": 3,
    "name": "Ariadne (placeholder)",
    "description": "Get alerted to deceptive design patterns on the web",
    "version": "0.0.1",
    "action": {
        "default_popup": "popup/index.html",
        "default_icon": "images/yarn.png"
    },
    "background": {
        "service_worker": "background/index.js",
        "type": "module"
    },
    "minimum_chrome_version": "92",
    "content_scripts": [
        {
            "js": ["scripts/content.js"],
            "matches": ["*://*/*"],
            "exclude_matches": ["*://*.inquirer.net/*", "*://*.kurzgesagt.org/*"],
            "run_at": "document_idle"
        },
        {
            "js": ["scripts/inquirer.net.js"],
            "matches": ["https://*.inquirer.net/*"],
            "run_at": "document_idle"
        },
        {
            "js": ["scripts/kurzgesagt.org.js"],
            "matches": ["https://*.kurzgesagt.org/*"],
            "run_at": "document_idle"
        }
    ]
}